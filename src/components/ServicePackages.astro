---
const services1: string[] = ['Health Living', 'Comfort Living', 'Putzen'];
const services2: string[] = ['Butler', 'Caffeur'];
const services3: string[] = ['Kochen', 'Fitness'];
import BulletListItem from './BulletListItem.astro';
---

<div class='bg-white py-24 sm:py-32'>
  <div class='mx-auto max-w-7xl px-6 lg:px-8'>
    <div class=''>
      <h2 class='font-medium text-3xl'>Unsere Collection</h2>
      <p class='font-cinzel pt-1.5'>Royal Prestige</p>
    </div>
    <div
      class='isolate mx-auto mt-16 grid max-w-md grid-cols-1 gap-y-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3'
    >
      <div
        class='flex flex-col justify-between border-royal-gray border-4 bg-white p-8 ring-1 ring-gray-200 lg:p-6 lg:m-2 lg:mx-8 xl:p-10 xl:m-8 xl:mx-14'
      >
        <div class='mt-4'>
          <div class='grid place-items-center'>
            <h3 id='tier-startup' class='text-xl font-semibold leading-8'>
              Health Living
            </h3>
            <p class='text-sm font-cinzel'>Royal Prestige</p>
          </div>
          <div class='grid place-items-center'>
            <button
              aria-describedby='tier-startup'
              class='flex gap-8 items-center mt-8 py-3 px-5 text-sm font-semibold leading-6 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 bg-royal-gold text-white shadow-sm hover:bg-indigo-500'
              >Prestige sichern <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='w-6 h-6'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3'></path>
              </svg></button
            >
          </div>
          <ul role='list' class='mt-12 space-y-3 text-sm leading-6'>
            {services3.map((item) => <BulletListItem {item} />)}
          </ul>
        </div>
      </div>
      <div
        class='flex flex-col relative justify-between border-royal-gray bg-royal-gray p-8 ring-1 ring-gray-200 lg:p-6 lg:m-2 lg:mx-8 xl:p-10 xl:m-8 xl:mx-14'
      >
        <p
          class='bg-royal-gold absolute -mt-14 -ml-7 px-2.5 py-1 text-xs font-cinzel
           leading-5 text-white lg:-mt-10 lg:-ml-5 xl:-mt-14 xl:-ml-8'
        >
          Most popular
        </p>
        <div class='mt-4'>
          <div class='grid place-items-center'>
            <h3
              id='tier-startup'
              class='text-xl font-semibold leading-8 text-white'
            >
              Prestige Living
            </h3>
            <p class='text-sm font-cinzel text-white'>Royal Prestige</p>
          </div>
          <div class='grid place-items-center'>
            <button
              aria-describedby='tier-startup'
              class='flex gap-8 items-center mt-8 py-3 px-5 text-sm font-semibold leading-6 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 bg-royal-gold text-white shadow-sm hover:bg-indigo-500'
              >Prestige sichern <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='w-6 h-6'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3'></path>
              </svg></button
            >
          </div>
          <ul role='list' class='mt-12 space-y-3 text-sm leading-6 text-white'>
            {services1.map((item) => <BulletListItem {item} />)}
          </ul>
        </div>
      </div>
      <div
        class='flex flex-col justify-between border-royal-gray border-4 bg-white p-8 ring-1 ring-gray-200 lg:p-6 lg:m-2 lg:mx-8 xl:p-10 xl:m-8 xl:mx-14'
      >
        <div class='mt-4'>
          <div class='grid place-items-center'>
            <h3 id='tier-startup' class='text-xl font-semibold leading-8'>
              Comfort Living
            </h3>
            <p class='text-sm font-cinzel'>Royal Prestige</p>
          </div>
          <div class='grid place-items-center'>
            <button
              aria-describedby='tier-startup'
              class='flex gap-8 items-center mt-8 py-3 px-5 text-sm font-semibold leading-6 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 bg-royal-gold text-white shadow-sm hover:bg-indigo-500'
              >Prestige sichern <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='w-6 h-6'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3'></path>
              </svg></button
            >
          </div>

          <ul
            role='list'
            class='mt-8 space-y-3 text-sm leading-6 text-gray-600'
          >
            {services2.map((item) => <BulletListItem {item} />)}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
