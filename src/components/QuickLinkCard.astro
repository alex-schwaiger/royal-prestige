---
const { title, link } = Astro.props;
---

<div class="px-4 py-6 border-2 border-royal-gray">
  <h3 class="text-base font-semibold leading-7 text-gray-900">{title}</h3>
  <dl class="mt-3 space-y-1 text-sm leading-6 text-gray-600">
    <div>
      <dt class="sr-only">Mehr Erfahren</dt>
      <dd><a class="font-semibold text-royal-gold" href={link}>Mehr Erfahren<span aria-hidden="true">&rarr;</span></a></dd>
    </div>
  </dl>
</div>