---
type Props = {
  link: string;
  name: string;
}

const { link, name } = Astro.props;
---

<li class="flex justify-between group">
  <a href={link} class="group-hover:text-gray-800">{name}</a>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 512 512" >
    <polyline points="268 112 412 256 268 400"  style="fill:none;stroke:#6C727F;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px"/>
    <line x1="392" y1="256" x2="100" y2="256"  style="fill:none;stroke:#6C727F;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px" />
  </svg>
</li>
