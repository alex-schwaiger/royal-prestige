---
const advantagesf: string[] = [
'Personalisierte Betreuung',
'Fachkundige Anleitung​',
'Effektive Ergebnisse',
];
const advantagesc: string[] = [
  'Gourmet-Erlebnis',
  'Zeitersparnis',
  'Maßgeschneiderte Menüs',
];
import BulletListItem from '../BulletListItem.astro';
---

<div class='bg-white'>
  <div class='grid place-items-center'>
    <h2 class='font-medium text-3xl'>Unsere Vorteile</h2>
    <p class='font-cinzel pt-1.5 text-sm'>
      Royal Prestige
    </p>
  </div>
  <div class='py-12 mx-12 grid grid-cols-1 place-items-center sm:grid-cols-2'>
    <div class="grid place-items-center py-8 px-4 bg-royal-gray w-3/5 sm:w-4/5 ">
    <p class="text-center pb-6 text-xl text-royal-gold  font-cinzel">Kochen</p>
    <ul role='list' class='mt-3 space-y-3 leading-6 text-sm mb-2 text-white'>
      {advantagesc.map((item) => <BulletListItem {item} />)}
    </ul>
  </div>
  <div class="grid place-items-center mt-12 py-8 px-4 bg-royal-gray sm:mt-0 w-3/5 sm:w-4/5">
    <p class="text-center pb-6 text-xl text-royal-gold  font-cinzel">Fittness</p>
    <ul role='list' class='mt-3 space-y-3 leading-6 text-sm mb-2 text-white'>
      {advantagesf.map((item) => <BulletListItem {item} />)}
    </ul>
  </div>
  </div>
</div>
