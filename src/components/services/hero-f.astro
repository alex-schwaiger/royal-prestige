---
import { Image } from 'astro:assets';
import clean from 'src/assets/fitness.jpg';
---

<div class='relative bg-white'>
  <div class='mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-4 lg:px-8'>
    <div class='relative col-span-6 flex items-center justify-center'>
      <Image
        src={clean}
        alt=''
        class='w-auto h-4/5 object-cover p-14 lg:p-12'
      />
    </div>

    <div
      class='px-6 pb-16 lg:col-span-7 lg:px-0 xl:col-span-6 flex flex-col items-center'
    >
      <div class='my-auto mx-auto max-w-2xl lg:mx-0'>
        <h1
          class='text-4xl font-medium tracking-tight text-royal-gold sm:text-6xl'
        >
          Fitness
        </h1>
        <p
          class='mt-2 text-lg leading-8 text-gray-400 sm:max-w-md lg:max-w-none font-cinzel'
        >
          Royal Prestige
        </p>
        <p
          class='mt-3 text-lg leading-8 text-black-600 sm:max-w-md lg:max-w-none'
        >
          Erreichen Sie Ihre Fitnessziele mit professionellen und
          ma√ügeschneiderten Training.
        </p>
        <div class='mt-4 flex items-center gap-x-6'>
          <a href='#' class='border-2 border-black'>
            <button
              class='text-sm font-semibold leading-6 text-gray-900 flex gap-3 items-center py-3 px-6 font-cinzel'
              >Zu den Paketen <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='w-6 h-6'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3'></path>
              </svg>
            </button>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
